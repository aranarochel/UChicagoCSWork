#ifndef _CONE_MESH_HXX_
#define _CONE_MESH_HXX_

#include "cs237.hxx"
#include "instance.hxx"

//! creates a cone shaped mesh suitable for use as a light volume (i.e., just vertices,
//! no normals or texture coordinates).
//! \param pos    the apex of the cone
//! \param dir    the direction in which the cone is pointing
//! \param angle  the angle between the axis and edge of the cone
//! \param height the height of the cone
//! \return the Instance object that can be used to render the cone
Instance *MakeCone (cs237::vec3f pos, cs237::vec3f dir, float angle, float height);

#endif //! _CONE_MESH_HXX_
